generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model Quote {
    id          Int          @id @default(autoincrement())
    quote       String
    author      String
    source      String?
    dailyQuotes DailyQuote[]

    @@unique([author, quote])
}

model DailyQuote {
    day     DateTime @unique
    quote   Quote    @relation(fields: [quoteId], references: [id])
    quoteId Int
}
